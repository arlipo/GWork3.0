@using Open.Sentry.Extensions
@model Open.Core.IPaginatedList<Open.Facade.Party.CountryView>
@{
    ViewBag.Title = "Countries";
    Layout = "_IndexPartial";
}

@section Create {
    <a asp-action=Create>Create New</a>
}

<body>
    <table class="table">
        @{ var dummy = Model.FirstOrDefault();}
        <thead>
            <tr>
                @Html.SortColumnHeaderFor(ViewData["SortAlpha3"], model => dummy.Alpha3Code)
                @Html.SortColumnHeaderFor(ViewData["SortAlpha2"], model => dummy.Alpha2Code)
                @Html.SortColumnHeaderFor(ViewData["SortName"], model => dummy.Name)
                @Html.SortColumnHeaderFor(ViewData["SortValidFrom"], model => dummy.ValidFrom)
                @Html.SortColumnHeaderFor(ViewData["SortValidFrom"], model => dummy.ValidTo)
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Alpha3Code)</td>
                    <td>@Html.DisplayFor(modelItem => item.Alpha2Code)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.ValidFrom)</td>
                    <td>@Html.DisplayFor(modelItem => item.ValidTo)</td>
                    @Html.EditDetailDeleteFor(modelItem => item.Alpha3Code)
                </tr>
            }
        </tbody>
    </table>
</body>


@using Open.Sentry.Resource
<!DOCTYPE html>
<html>
<head>
    @inject LocService SharedLocalizer
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/home/index.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body >
<div class="container-fluid bg-1 text-center">
    <h3 style="font-size: 50px; color: black; opacity: 0.9"><strong>@SharedLocalizer.GetLocalizedHtmlString("Home.Index.Welcome")</strong></h3>

    <h2 style="color: black; font-family: sans-serif; opacity: 0.6">
        <b>@SharedLocalizer.GetLocalizedHtmlString("Home.Index.BestPro")</b>
    </h2>
    <br>
    <img src="~/GWorkLogo.png" alt="Logo" width="150" height="87">
    <br>
    <br>
    <br>
    <br>
    <form action="http://localhost:57494/goods">
        <button class="btn btn-info">@SharedLocalizer.GetLocalizedHtmlString("Home.Index.ShowProduct")</button>
    </form>
    <br>
</div>
<br>
<br>

<div class="container-fluid bg-3">
    <h3 class="margin"><strong><font size="20" color: black; face="Arial">@SharedLocalizer.GetLocalizedHtmlString("Home.Index.HotItems")</font></strong></h3><br>
<div class="row">
    <div class="col-sm-4">
        <p><strong>Antifreeze + coolant LONG LIFE</strong></p>
        <p></p>
        <img src="freez.png" alt="Image" width="255" height="255">
        <p><strong>8,99€</strong></p>
        <button class="btn btn-info">@SharedLocalizer.GetLocalizedHtmlString("Home.Index.Buy")</button>
    </div>
    <div class="col-sm-4">
        <p><strong>RIDEX Brake Disc Rear Axle</strong></p>
        <img src="ridex.png" alt="Image" width="255" height="255">
        <p><strong>14,99€</strong></p>
        <button class="btn btn-info" >@SharedLocalizer.GetLocalizedHtmlString("Home.Index.Buy")</button>
    </div>
    <div class="col-sm-4">
        <p><strong>EXTREME Mobile phone holders</strong></p>
        <img src="horder.png" alt="Image" width="255" height="255">
        <p><strong>6,99€</strong></p>
             
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">@SharedLocalizer.GetLocalizedHtmlString("Home.Index.Buy")</button>
                
        <div class="modal fade fd right" id="myModal" role="dialog">
            <div class="modal-dialog" >
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>
                    </div>
                    <div class="modal-body" style="color:black">
                        <p> @SharedLocalizer.GetLocalizedHtmlString("Home.Index.ThankYou")</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">@SharedLocalizer.GetLocalizedHtmlString("Home.Index.Close")</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <br/>
</div>
</body>
</html>









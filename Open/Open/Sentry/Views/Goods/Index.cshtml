@using Open.Sentry.Extensions
@model Open.Core.IPaginatedList<Open.Facade.Goods.GoodView>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="~/css/Goods/goods.css" />
@{

    ViewBag.Title = "Goods";
    Layout = "_IndexPartial";
}

@section Create
    {
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            <a asp-controller="Goods" asp-action="Create">Add new product</a>
        }
    }
}



<body>
    <table class="table">
        @{var dummy = Model.FirstOrDefault();}
        <thead>
            <tr>
                @Html.SortColumnHeaderFor(ViewData["SortName"], model => dummy.Name)
                @Html.SortColumnHeaderFor(ViewData["SortPrice"], model => dummy.Price)
                @Html.SortColumnHeaderFor(ViewData["SortImage"], model => dummy.Image)
                @Html.SortColumnHeaderFor(ViewData["SortQuantity"], model => dummy.Quantity)
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>&euro;@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@Html.DisplayFor(modelItem => item.Image)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Admin"))
                        {
                            <td>@Html.EditDetailDeleteFor(modelItem => item.ID)</td>
                        }
                        else
                        {
                            <td>
                                <div>
                                    <a asp-action="AddToCart" asp-route-id="@item.ID" class="btn btn-default">Add to Cart</a>
                                </div>
                            </td>
                        }
                    }
                    @*
                        <div class="modal fade bootstrapmodal" >
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        This item was added to your shopping cart!</div>
                                    <button data-dismiss="model" class="close"> <span>&times;</span></button>
                                </div>
                            </div>
                        </div>
                    *@
                </tr>
            }
        </tbody>
    </table>
</body>

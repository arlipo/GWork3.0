@using Open.Sentry.Extensions
@model Open.Facade.Quantity.CurrencyView

@{
    ViewBag.Title = "Details";
    ViewBag.SubTitle = "Currency";
    Layout = "_DetailsPartial";
}

<body>
    @Html.ViewingControlsFor(model => model.IsoCode)
    @Html.ViewingControlsFor(model => model.Symbol)
    @Html.ViewingControlsFor(model => model.Name)
    @Html.ViewingControlsFor(model => model.ValidFrom)
    @Html.ViewingControlsFor(model => model.ValidTo)
    @if (Model.UsedInCountries.Count > 0) {
        <p/>
        <h4>@Html.DisplayNameFor(model => model.UsedInCountries)</h4>
        <p/>
        <table class="table">
            @{ var dummy = Model.UsedInCountries.FirstOrDefault(); }
            <thead>
            <tr>
                <th>@Html.LabelFor(model => dummy.Name)</th>
                <th>@Html.LabelFor(model => dummy.Alpha3Code)</th>
                <th>@Html.LabelFor(model => dummy.Alpha2Code)</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.UsedInCountries) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Alpha3Code)</td>
                    <td>@Html.DisplayFor(modelItem => item.Alpha2Code)</td>
                </tr>
            }
            </tbody>
        </table>
    }

</body>

@section Actions{
    @Html.ActionLink("Edit", "Edit", new {id = Model.IsoCode})
    @Html.ActionLink("Back to List", "Index")
}


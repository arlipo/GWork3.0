@model Open.Sentry.Models.AccountViewModels.CreditsViewModel

@{
    ViewBag.Title = "Money editor";
    Layout = "_Layout";
}

<body>
    <h2 style="color: #e2e2e2">@Model.Email</h2>
    <div style="float: right; position: relative; right: 25px; bottom: 10px">
        <a asp-action="Index" class="button button5">Back</a>
    </div>
    <div class="form-horizontal">
        <form method="post" asp-action="SetAmount" asp-route-email=@Model.Email>
            <label asp-for="Credits" style="color: #e2e2e2">Amount of EURO &nbsp;</label>
            <input asp-for="Credits" style="width: 300px" />
            <span asp-validation-for="Credits" class="text-danger"></span>
            <div style="position: relative; left: 440px; bottom: 31px">
                <input type="submit" value="Set" class="btn" style="font-weight: bold" />
            </div>
        </form>
    </div>
</body>